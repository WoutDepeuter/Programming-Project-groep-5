            <hr id="breakline">
            
            <div class="audio">

            <a id="audio" class="producten">Audio</a>
            <div class="producten-container">
                <button class="arrow arrow-left" onclick="moveLeft('audioSlider')">&#10094</button>
                <div id="audioSlider" class="slider">
                    <% audioSlider.forEach(product=> { %>
                        <div class="product-box">
                          <% if (product.afbeelding) { %>
                            <% const imageUrl=`data:image/png;base64,${product.afbeelding.toString('base64')}`; %>
                              <img src="<%= imageUrl %>" alt="Product Image" />
                              <% } else { %>
                                <p>No image available</p>
                                <% } %>
                                  <div class="naam-en-besch">
                                    <h2>
                                      <%= product.MERK %>: <%= product.naam %>
                                    </h2>
                                    <p>
                                      <%= product.Beschrijving %>
                                    </p>
                                    <a class="reserveren" href="/info" data-product-id="<%= product.Model_ID %>">reserveren</a>
                                  </div>
                        </div>
                        <% }); %>
                </div>
                <button class="arrow arrow-right" onclick="moveRight('audioSlider')">&#10095;</button>
            </div>
            <div class="progress-bar" id="audioProgressBar"><div class="progress-bar-inner"></div></div>
        </div>
    </div>

