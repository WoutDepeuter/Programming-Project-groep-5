<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" href="/pictures/logo_login.png" />
  <title>&lt;EHBLoanHub&gt;</title>
  <link rel="stylesheet" href="css/catalogus.css" />
</head>

<body>
  <header>
    <div class="zoekbalk">
      <input id="zoekbalk" type="text" placeholder="Zoeken..." />
    </div>
    <div class="site-naam">
      <a href="/homescreen" id="site-naam">&lt;EHBLoanHub&gt;</a>
    </div>
    <div class="profiel">
      <a href="/profiel-user" id="profile-link"><img id="profiel" src="/pictures/circle-profile.png"
          alt="profiel" /></a>
    </div>
  </header>
  <nav class="prodnav">

    <ul class="producten-categorien">
      <li><a href="/audio-catalogus">Audio</a></li>
      <li><a href="/belichting-catalogus">Belichting</a></li>
      <li><a href="#" class="active">Video</a></li>
      <li><a href="/varia-catalogus">Varia</a></li>
      <li><a href="/xr-catalogus">XR</a></li>
      <li><button type="button" id="filter">Filter: <span>&#9660;</span></button></li>
    </ul>
  </nav>
  <hr />
  <main>
    <div id="alleProducten">
      <!-- Voorbeeld box -->
      <% products.forEach(product=> { %>
        <div class="box">
          <div>
            <% if (product.afbeelding) { %>
              <% const imageUrl=`data:image/png;base64,${product.afbeelding.toString('base64')}`; %>
                <img src="<%= imageUrl %>" alt="Product Image" />
                <% } else { %>
                  <p>No image available</p>
                  <% } %>
          </div>
          <div class="naam-en-besch">
            <h2>
              <%= product.MERK %>: <%= product.naam %>
            </h2>
            <p>
              <%= product.Beschrijving %>
            </p>
          </div>
          <div>
            <a class="reserveren" href="/info" data-product-id="<%= product.Model_ID %>">reserveren</a>
          </div>
        </div>
        <% }); %>
    </div>
    <div id="bericht"></div>
  </main>
  <footer>
    <div id="school">Â© 2024 Erasmushogeschool Brussel</div>
    <div id="taal">Nederlands</div>
  </footer>

  <div id="productPopup" class="popup-background">
    <div class="popup-content">
      <h2>Product Reservation</h2>
      <div id="productDetails"></div>
      <button id="closePopup" class="close-btn">Close</button>
    </div>
  </div>

  <div id="merkPopup" class="popup-background" style="display: none;">
    <div class="popup-content">
      <h2>Kies een Merk</h2>
      <div id="merkenLijst"></div>
      <button id="closeMerkPopup" class="close-btn">Sluiten</button>
    </div>
  </div>

  <a class="scroll-to-top-btn"><img src="/pictures/arrow-up.png" alt=""></a>


  <script src="/js/user/zoekProduct.js"></script>
  <script src="/js/user/filter.js"></script>
  <script src="/js/user/productenLijst.js"></script>
  <script src="/js/user/productPopupScript.js"></script>
  <script src="/js/user/linkNaarProfielUser.js"></script>
</body>

</html>